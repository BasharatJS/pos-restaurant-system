rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Temporary development rules - Allow authenticated users to read/write
    // TODO: Implement proper role-based security later
    
    function isAuthenticated() {
      return request.auth != null;
    }

    // Tables collection
    match /tables/{tableId} {
      allow read, write: if isAuthenticated();
    }

    // Menu Items collection  
    match /menuItems/{itemId} {
      allow read, write: if isAuthenticated();
    }

    // Orders collection
    match /orders/{orderId} {
      allow read, write: if isAuthenticated();
    }

    // Order Items collection
    match /orderItems/{itemId} {
      allow read, write: if isAuthenticated();
    }

    // Users collection (for future role-based auth)
    match /users/{userId} {
      allow read, write: if isAuthenticated();
    }

    // Settings and analytics
    match /settings/{document=**} {
      allow read, write: if isAuthenticated();
    }

    match /analytics/{document=**} {
      allow read, write: if isAuthenticated();
    }

    // Default deny rule for all other documents
    match /{document=**} {
      allow read, write: if false;
    }
  }
}